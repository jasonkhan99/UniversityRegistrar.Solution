@{
  Layout = "_Layout";
}

@model Registrar.Models.Course;

<h2>Course Details</h2>
<br>
<h3>@Html.DisplayFor(model => model.CourseName)</h3>
<br>
<h4>Course Number: @Html.DisplayFor(model => model.CourseNumber)</h4>

@if (@Model.Students.Count == 0)
{
  <p>No students enrolled</p>
}
else
{
  <h4>Students enrolled in the class:</h4>
  <ul>
  @foreach(var join in Model.Students)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to course list", "Index")</p>