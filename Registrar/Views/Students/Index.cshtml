@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Students</h1>

@if(@Model.Count == 0)
{
  <h3>There are no students</h3>
}
else
{
  <ul>
  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId})</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a new student", "Create")</p>
<P>@Html.ActionLink("Home", "Index", "Home")</P>